@{
    ViewBag.Title = "EditUser";
}


@model CPS.Models.User

<head>
    <title></title>

    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link href="~/Content/themes/bootstrap.min.css" rel="stylesheet">
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src=" ~/Scripts/bootstrap.js"> </script>

</head>



<div class="container ">
    

    <i class="glyphicon glyphicon-align-justify"></i>

        
        <hr>
        <div class="row">
            <!-- left column -->
            

            <!-- edit form column -->
            <div class="col-md-9 personal-info">
                <div class="alert alert-info alert-dismissable">
                    <a class="panel-close close" data-dismiss="alert">×</a>
                    <i class="fa fa-coffee"></i>
                    This is an <strong>.alert</strong>. Use this to show important messages to the user.
                </div>
                <h3>Personal info</h3>

        @using (Html.BeginForm("Edit", "User", FormMethod.Post, new {@class="form-group", enctype = "multipart/form-data" }))
        {
            @Html.HiddenFor(m=>m.Id);
            @Html.LabelFor(m => m.Name, new { @class = "col-md-3 control-label" })

            <div class="col-md-8">
                @Html.EditorFor(m => m.Name, new { @class = "form-control" })
            </div>
            @Html.LabelFor(m => m.Email, new { @class = "col-md-3 control-label" })

            <div class="col-md-8">
                @Html.EditorFor(m => m.Email)
            </div>
            @Html.LabelFor(m => m.Password, new { @class = "col-md-3 control-label" })

            <div class="col-md-8">
                @Html.EditorFor(m => m.Password)
            </div>
            @Html.LabelFor(m => m.PhoneNo, new { @class = "col-md-3 control-label" })

            <div class="col-md-8">
                @Html.EditorFor(m => m.PhoneNo)
            </div>
            @Html.LabelFor(m => m.City, new { @class = "col-md-3 control-label" })

            <div class="col-md-8">
                @Html.EditorFor(m => m.City)
            </div>
            <div class="form-group">
                <label class="col-lg-3 control-label">About Your Car</label>
                <div class="col-lg-8">
                    <div class="ui-button-text-only">
                        Upload Image: <input type="file" name="Picture" required="" class="form-control" />

                    </div>
                </div>
            </div>
    <input type="submit" value="Save" class="form-control btn-success" />
        }
    


            </div>
        </div>
    </div>

<hr>