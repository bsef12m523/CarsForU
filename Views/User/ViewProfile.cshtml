@model CPS.Models.User
@using CPS.Models
<head>
    <title></title>

    <link href="~/Content/bootstrap.css" rel="stylesheet">
    <link href="~/Content/themes/bootstrap.min.css" rel="stylesheet">
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src=" ~/Scripts/bootstrap.js"> </script>

</head>



<div class="container ">
   

    <i class="glyphicon glyphicon-align-justify"></i><div class="container">
        <h1>Profile</h1>
        <hr>



   
    <div class="row">
        <div class="col-md-7">
            <a href="#">
                <img src="/Files/@(Model.Picture)" style=" width:600px; height:300px">
            </a>
        </div>
        @{User u = (User)HttpContext.Current.Session["User"];}
        <div class="col-md-5">
            <h3>Name: @(Model.Name)</h3>
            <h4>Phone No: @(Model.PhoneNo)</h4>
            <p>
                This car has new some exciting features
                <div class="row">
                    <div class="col-lg-5">
                        <ul>

                            <li>
                                Email :@Model.Email
                            </li>
                      
                    @if (Model.Id == u.Id)
                    {

                        if (u.Type == "Admin")
                        { <li>
                            UserId :@Model.Id
                            </li>}
                            <li>
                                Password :@Model.Password
                            </li>
                            <li>
                                City :@Model.City
                            </li>

                            <li>
                                Date :@Model.Date
                            </li>


                          
                            }

                        </ul>
                    </div>
                   
                </div>

            </p>
            <a href="EditUser" class="btn-link">Edit Profile</a>

        </div>
    </div>
            <!-- /.row -->

    <hr>





    </div>
    </div>
